<div class="card mb-3">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                {{ response.name }}
            </div>
        </div>
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{ response.description }}</p>

            <footer class="blockquote-footer mb-3">
                {{ response.created ? response.created|date('Y-m-d H:i:s') : '' }}
            </footer>
        </blockquote>
    </div>
</div>
