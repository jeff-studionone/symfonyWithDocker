<div class="card mb-3">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                {{ comment.name }}
            </div>
            <div class="text-right col-4">
                <a href="{{ path('responses.view', {'id': comment.id}) }}">
                    View comment
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{ comment.description }}</p>

            <footer class="blockquote-footer mb-3">
                {{ comment.created ? comment.created | date('Y-m-d H:i:s') : '' }} |
                <a href="{{ path('responses.view', {'id': comment.id}) }}">
                    {{ comment.getResponses() | length }}
                    replies
                </a>
            </footer>
        </blockquote>
    </div>
</div>
